<div class="center jumbotron">
  <h1>Welcome to <span class="logobig">Jinglr</span></h1>

  <h2>
    The place to create your Christmas wish list
  </h2><br>
<% if user_signed_in? && :search_list?%>
<p><%= link_to "New Search List", new_search_list_path, class: "btn-lg btn-default" %></p><br>
<br>
<br>
<div class="row">
<% @searchlists.each do |searchlist| %>
<div class="col-md-row">
<td> <%= link_to searchlist.name, searchlist, class: "btn-lg btn-default col-md-2 col-md-offset-1" %></td>
</div>
<% end %>
<% else %>
  <div class="btn btn-default">
          <%= link_to "Sign In", new_user_session_path %> |
          <%= link_to "Sign Up", new_user_registration_path %>
  </div>
<% end %>
</div>
